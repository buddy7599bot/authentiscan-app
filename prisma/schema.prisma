generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Subscription
  plan          String    @default("free")
  scansRemaining Int      @default(1)
  subscriptionEnd DateTime?
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  scans         Scan[]
  savedWatches  SavedWatch[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Scan {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  brand       String?
  model       String?
  reference   String?
  
  verdict     String
  confidence  Int
  issues      String
  
  images      String
  annotations String?
  
  reportUrl   String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SavedWatch {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scanId    String?
  
  brand     String
  model     String
  notes     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
